<% if(currentPage != -1){ %>
<ul class="pagination justify-content-center">
    <% if(currentPage != 1){ %>
    <li class="page-item">
        <a class="page-link" href="/<%= searchParams %>page=<%= currentPage - 1 %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
        </a>
    </li>
    <% } %>
    <% if(currentPage < pageLimit) { %>
    <li class="page-item">
        <a class="page-link" href="/<%= searchParams %>page=<%= (+currentPage + 1) %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
    <% } %>
</ul>
<% } %>