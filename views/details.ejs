<% include components/header.ejs %>

<div class="container container-details">
  <div class="row justify-content-md-left">
    <div class="card-details">
      <section class="card-details-header">
        <h2 class="card-title"><%= card.name %></h2>
      </section>
      <section class="card-details-body">
        <div class="card-details-image">
          <img src="<%= card.editions[0].image_url %>" alt="<%= card.name %>">
        </div>
        <div class="card-items">
          <table class="table">
            <tbody>
              <tr>
                <td class="card-items-title">Edition:</td>
                <td><%= card.editions[0].set %></td>
              </tr>
              <tr>
                <td class="card-items-title">Type:</td>
                <td><%= card.types[0] %></td>
              </tr>
              <tr>
                <td class="card-items-title">Cost:</td>
                <td><%= card.cost %></td>
              </tr>
              <tr>
                <td class="card-items-title">Rarity:</td>
                <td><%= card.editions[0].rarity %></td>
              </tr>
              <tr>
                <td class="card-items-title">Power/Though:</td>
                <td><%= card.power %> / <%= card.toughness %></td>
              </tr>
              <tr>
                <td class="card-items-title">Text:</td>
                <td class="card-items-text"><%= card.text %><p class="flavor-text"> <%= card.editions[0].flavor %></p></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="set-cards">
            <ul>
              <% for(let item in setCards){ %>
                <li class="small-card">
                  <a href="/cards/<%= setCards[item].editions[0].multiverse_id %>" title="<%= setCards[item].name %>">
                    <div class="small-card-title"><%= setCards[item].name %></div>
                    <div class="small-card-body">
                      <img class="small-card-img" src="<%= setCards[item].editions[0].image_url %>" alt="<%= setCards[item].name %>"/>
                    </div>
                  </a>
                </li>  
              <% } %>
            </ul>
          </div>
      </section>
    </div>
  </div>
</div>
<% include components/footer.ejs %>